@page
@model E_Commerce.Pages.CartModel
@{
}


<link rel="stylesheet" href="~/css/CartSearchLoginRegister.css">


<h2>Shopping Cart</h2>

@if (Model.CartItems.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <form method="post">
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td class="cart-text">@item.Product.Name</td>
                        <td class="cart-text">@item.Product.Price</td>
                        <td>
                            <input type="number" name="quantities[@item.CartItemId]" value="@item.Quantity" min="1" />
                        </td>
                        <td class="cart-text">@(item.Product.Price * item.Quantity)</td>
                        <td>
                            <button type="submit" class="btn-remove" asp-page-handler="Remove" asp-route-cartItemId="@item.CartItemId">Remove</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div>
            <h3 class="cart-text">Total: @Model.CartItems.Sum(i => i.Product.Price * i.Quantity)</h3>
        </div>

        <button type="submit" class="btn-update-quantities" asp-page-handler="UpdateQuantities">Update Quantities</button>
        <a href="~/Search/Checkout" class="btn-checkout">Checkout</a>
    </form>
}
