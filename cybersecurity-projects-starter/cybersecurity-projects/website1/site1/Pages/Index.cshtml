@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!-- Carousel Section -->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/carousel1.jpg" class="d-block w-100" alt="Cybersecurity Image 1">
            <div class="carousel-caption d-none d-md-block">
                <h5>Protect Your Digital Life</h5>
                <p>Top-notch cybersecurity products for your safety.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/carousel2.jpg" class="d-block w-100" alt="Cybersecurity Image 2">
            <div class="carousel-caption d-none d-md-block">
                <h5>Stay Secure Online</h5>
                <p>Explore our range of cybersecurity solutions.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/images/carousel3.jpg" class="d-block w-100" alt="Cybersecurity Image 3">
            <div class="carousel-caption d-none d-md-block">
                <h5>Peace of Mind</h5>
                <p>Our products are designed to protect you from cyber threats.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Products Section -->
<div class="container mt-5">
    <h2>Our Products</h2>
    <div class="row">
        <div class="col">
            <div class="product-slider">
                <div class="d-flex flex-nowrap">
                    @foreach (var product in Model.Products)
                    {
                        <div class="card me-3" style="min-width: 18rem;">
                            <img src="~/images/@product.ProductImage" class="card-img-top" alt="@product.Name">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                                <p class="card-text"><strong>$@product.Price</strong></p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Articles and Cybersecurity Images Section -->
<div class="container mt-5">
    <h2>Cybersecurity News & Updates</h2>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img src="~/images/latest cybersecurity trends.jpg" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Article 1 Image">
                <div class="card-body">
                    <h5 class="card-title">Latest Cybersecurity Trends</h5>
                    <p class="card-text">Stay informed with the latest developments in cybersecurity. Our experts provide insights on emerging threats and how to combat them.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <img src="~/images/protecting your data.jpg" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Article 2 Image">
                <div class="card-body">
                    <h5 class="card-title">Protecting Your Data</h5>
                    <p class="card-text">Learn how to protect your personal and business data from cyber-attacks. Our comprehensive guides cover everything from encryption to best practices.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <img src="~/images/cloud security.jpg" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Article 3 Image">
                <div class="card-body">
                    <h5 class="card-title">Understanding Cloud Security</h5>
                    <p class="card-text">As more businesses move to the cloud, understanding cloud security is crucial. Learn about the latest strategies to keep your data safe in the cloud.</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <img src="~/images/prevent phishing attacks.jpg" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Article 4 Image">
                <div class="card-body">
                    <h5 class="card-title">Preventing Phishing Attacks</h5>
                    <p class="card-text">Phishing attacks are on the rise. Learn how to spot phishing attempts and protect yourself from falling victim to these increasingly sophisticated attacks.</p>
                </div>
            </div>
        </div>
    </div>
</div>